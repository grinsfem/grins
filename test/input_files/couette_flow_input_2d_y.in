# Mesh related options
[Mesh]

   [./Generation]

     dimension = '2'
     element_type = 'QUAD9'
     n_elems_x = '2'
     n_elems_y = '1'
[]

#Linear and nonlinear solver options
[linear-nonlinear-solver]
   max_nonlinear_iterations = 10
   max_linear_iterations = 2500
   minimum_linear_tolerance = 1.0e-12
   verify_analytic_jacobians = 1.e-6
[]

# Visualization options
[vis-options]
   output_vis = 'true'
   vis_output_file_prefix = 'ns_couette_flow_2d_y'
   output_format = 'xdr'
[]

# Options for print info to the screen
[screen-options]
   print_equation_system_info = 'true'
   print_mesh_info = 'true'
   print_log_info = 'true'
   solver_verbose = 'true'
   solver_quiet = 'false'

   echo_physics = 'true'
   system_name = 'GRINS-TEST'
[]

# Materials
[Materials]
   [./TestMaterial]
      [./Viscosity]
         model = 'constant'
         value = '1.0'
      [../Density]
         value = '1.0'
[]

# Options related to all Physics
[Physics]

   enabled_physics = 'IncompressibleNavierStokes'

   [./IncompressibleNavierStokes]

      material = 'TestMaterial'

      bc_ids = '1 3'
      bc_types = 'prescribed_vel no_slip'
      bound_vel_1 = '0.0 10.0 0.0'
[]

[Variables]
   [./Velocity]
      names = 'u v'
      fe_family = 'LAGRANGE'
      order = 'SECOND'
   [../Pressure]
      names = 'p'
      fe_family = 'LAGRANGE'
      order = 'FIRST'
[]
