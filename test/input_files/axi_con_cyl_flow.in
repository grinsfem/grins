# Mesh related options
[Mesh]
   [./Generation]
      dimension = '2'
      element_type = 'QUAD9'
      n_elems_x = '500'
      n_elems_y = '1'
      x_min = '1.0'
      x_max = '2.0'
[]

# Options for tiem solvers
[unsteady-solver]
transient = false 

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 10 
max_linear_iterations = 25000

initial_linear_tolerance = 1.0e-12

verify_analytic_jacobians = 1.e-6

relative_residual_tolerance = 1.0e-11
relative_step_tolerance = 1.0e-11

# Visualization options
[vis-options]
output_vis = false 
vis_output_file_prefix = axi_con_cyl 

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true' 
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true'
solver_quiet = 'false'

echo_physics = 'true'

# Options related to all Physics
[Physics]

enabled_physics = 'IncompressibleNavierStokes'

is_axisymmetric = 'true'

# Options for Incompressible Navier-Stokes physics
[./IncompressibleNavierStokes]

FE_family = LAGRANGE
V_order = SECOND
P_order = FIRST

rho = 1.0
mu = 1.0

# Boundary ids:
# j = bottom -> 0
# j = top    -> 2
# i = bottom -> 3
# i = top    -> 1

bc_ids = '1 3 2 0'
bc_types = 'no_slip prescribed_vel general_velocity general_velocity'

bound_vel_3 = '0.0 2.0 0.0'

pin_pressure = true 
pin_value = 100.0
pin_location = '1.5 0.5'

[../VariableNames]

u_velocity = 'r_vel'
v_velocity = 'z_vel'
pressure = 'p'

[]
