# Mesh related options
[mesh-options]
mesh_option = create_2D_mesh
element_type = QUAD9
mesh_nx1 = 5 
mesh_nx2 = 5 

domain_x1_max = 1.0

# Options for tiem solvers
[unsteady-solver]
transient = false 
theta = 1.0
n_timesteps = 20
deltat = 0.01

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 10 
max_linear_iterations = 2500

initial_linear_tolerance = 1.0e-12

relative_residual_tolerance = '1.0e-14'

absolute_residual_tolerance = '1.0e-10'

verify_analytic_jacobians = '1.e-6'

# Visualization options
[vis-options]
output_vis = 'false' 
vis_output_file_prefix = 'axi_poiseuille' 

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true' 
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true'
solver_quiet = 'false'

echo_physics = 'true'

print_dof_constraints = 'true'
print_residual = 'true'

# Options related to all Physics
[Physics]

enabled_physics = 'IncompressibleNavierStokes'

# Options for Incompressible Navier-Stokes physics
[./IncompressibleNavierStokes]

FE_family = LAGRANGE
V_order = SECOND
P_order = FIRST

rho = 1.0
mu = 1.0

# Boundary ids:
# j = bottom -> 0
# j = top    -> 2
# i = bottom -> 3
# i = top    -> 1

bc_ids = '1 3 0 2 '
bc_types = 'no_slip axisymmetric general_velocity general_velocity'


pin_pressure = 'true'
pin_value = 100.0
pin_location = '0.0 0.0'

[../VariableNames]

Temperature = 'T'
u_velocity = 'r_vel'
v_velocity = 'z_vel'
pressure = 'p'

[]
