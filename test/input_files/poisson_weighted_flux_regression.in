# Materials
[Materials]
   [./Conductivity]
      k = '1.0'
[]

# Options related to all Physics
[Physics]

   enabled_physics = 'HeatConduction ParsedSourceTerm'

   [./HeatConduction]

      T_FE_family = 'LAGRANGE'
      T_order = 'FIRST'

      bc_ids = '0 1 2 3'
      bc_types = 'constant_dirichlet constant_dirichlet constant_dirichlet constant_dirichlet'
      bc_variables = 'T T T T'
      bc_values = '0 0 0 0'

#      bc_ids = '1 3'
#      bc_types = 'constant_dirichlet constant_dirichlet'
#      bc_variables = 'T T'
#      bc_values = '0 0'

      rho = '1.0'
      Cp = '1.0'

   [../ParsedSourceTerm]
      [./Function]
         # Forcing function corresponding to \Delta u,
         # where u = 4*(1-exp(-a*x)-(1-exp(-a))*x)*y*(1-y)
         value = 'a:=1;-a*(((-4*a*a)*exp(-a*x)*y*(1-y))+(-8+(8*exp(-a*x))+(8*(1-exp(-a))*x)))'
         # or where u = x*(1-x) (with 1D BCs)
#         value = '2'
         # or where u = sin(pi*x) * sin(pi*y)
#         value = '2*pi*pi*sin(pi*x)*sin(pi*y)'
      [../Variables]
         names = 'T'
         FE_types = 'LAGRANGE'
         FE_orders = 'FIRST'
[]

[QoI]
enabled_qois = 'weighted_flux'

[./WeightedFlux]
variables = 'T'
bc_ids = '3'        # Note that this spills over to 0+2 in the corners!
weights = 'y*(1-y)' # This 'fixes' the spill
# Analytic value == '2/15*(a-1+exp(-a))' 

# Or, with u = sin(pi*x) * sin(pi*y)
# du/dx = pi * cos(pi*x) * sin(pi*y)
# integral ( du/dx * y * (1-y) )
# Analytic value = 4 / pi^2 ~= 0.405284734569351

[]

# Mesh related options
[Mesh]

   class = 'serial'

   [./Generation]
      dimension = '2'
      n_elems_x = '20'
      n_elems_y = '20'
      x_min = '0.0'
      x_max = '1.0'
      y_min = '0.0'
      y_max = '1.0'
      element_type = 'QUAD4'
[]

# Options for tiem solvers
[unsteady-solver]
   transient = 'false'
[]

#Linear and nonlinear solver options
[linear-nonlinear-solver]
   do_adjoint_solve = true
   max_nonlinear_iterations =  25
   max_linear_iterations = 2500
   relative_residual_tolerance = '1.0e-12'
   relative_step_tolerance = '1.0e-12'
[]

# Visualization options
[vis-options]
   output_vis = true
   output_adjoint = true
   vis_output_file_prefix = 'poisson'
   output_format = 'ExodusII xdr'
[]

# Options for print info to the screen
[screen-options]
   system_name = 'Laplace'
   print_equation_system_info = 'true'
   print_mesh_info = 'true'
   print_log_info = 'true'
   print_qoi = 'true'
   solver_verbose = 'true'
   solver_quiet = 'false'
[]
