# Mesh related options
[Mesh]
   [./Generation]
      dimension = '3'
      element_type = 'HEX27'
      n_elems_x = '3'
      n_elems_y = '3'
      n_elems_z = '3'
[]

# Options for time solvers


[]

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true'
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true'
solver_quiet = 'false'

echo_physics = 'true'
[]

# Materials
[Materials]
   [./TestMaterial]
      [./Viscosity]
         model = 'constant'
         value = '1.0'
      [../ThermalConductivity]
         model = 'constant'
         value = '1.0'
      [../Density]
         value = '1.0'
      [../SpecificHeat]
         value = '1.0'
      [../ReferenceTemperature]
         value = '1.0'
      [../ThermalExpansionCoeff]
         value = '1.0'
[]

# Options related to all Physics
[Physics]

enabled_physics = 'IncompressibleNavierStokes HeatTransfer BoussinesqBuoyancy'

# Options for Incompressible Navier-Stokes physics
[./IncompressibleNavierStokes]

material = 'TestMaterial'

# Boundary ids:
# k = bottom -> 0
# k = top    -> 5
# j = bottom -> 1
# j = top    -> 3
# i = bottom -> 4
# i = top    -> 2

bc_ids = '0 1 2 3 4 5'
bc_types = 'no_slip no_slip no_slip no_slip no_slip no_slip'

pin_pressure = 'true'
pin_value = '100.0'
# Purposefully outside the mesh for this test
pin_location = '-0.5 -0.5'

[../HeatTransfer]

material = 'TestMaterial'

bc_ids = '4 2 0 5 1 3'

bc_types = 'isothermal_wall isothermal_wall adiabatic_wall adiabatic_wall adiabatic_wall adiabatic_wall'

T_wall_4 = 1
T_wall_2 = 10

[../BoussinesqBuoyancy]

material = 'TestMaterial'

g = '0 -9.8 0'

[]

[Variables]
   [./Velocity]
      names = 'u v'
      fe_family = 'LAGRANGE'
      order = 'SECOND'
   [../Pressure]
      names = 'p'
      fe_family = 'LAGRANGE'
      order = 'FIRST'
   [../Temperature]
      names = 'T'
      fe_family = 'LAGRANGE'
      order = 'SECOND'
[]
